border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: " "

border-1px-before($color)
  position: relative
  &:before
    display: block
    position: absolute
    left: 0
    top: 0
    width: 100%
    border-top: 1px solid $color
    content: " "

border-1px-right($color)
  position: relative
  &:after
    display: block
    position: absolute
    right: 0
    top: 0
    width: 0
    height: 100%
    border-right: 1px solid $color
    content: " "

border-none()
  &:after, &:before
    border: none

bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ration: 3), (min-device-pixel-ration: 3)
    background-image: url($url + "@3x.png")

empty-span()
  &:after
    display: inline-block
    content: ''
